<div class="registration-container">
  <div class="logo">
    <div class="logo__brand">
      <img class="logo__icon" src="https://placehold.co/70x70" alt="placeholder image">
      <div class="logo__name">Odin-Facebook</div>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "login-form" }) do |f| %>
    <div class="login-form__header">
      <h2 class="login-form__title">Create a new account</h2>
      <p class="login-form__subtitle">It's quick and easy.</p>
    </div>
    <hr>
    <div class="login-form__form-group login-form__form-group--name">
      <%= f.label :first_name, class: "login-form__label" %>
      <%= f.text_field :first_name, placeholder: "First Name", autofocus: true, class: "login-form__input", pattern: "/\A[a-zA-Z]+\z/", minlength: 2, maxlength: 30, required: true %>
      <%= f.label :last_name, class: "login-form__label" %>
      <%= f.text_field :last_name, placeholder: "Last Name", class: "login-form__input", pattern: "/\A[a-zA-Z]+\z/", minlength: 2, maxlength: 30, required: true %>
    </div>
    <div class="login-form__form-group">
      <%= f.label :email, class: "login-form__label" %>
      <%= f.email_field :email, placeholder: "Email address", class: "login-form__input", required: true %>
    </div>
    <div class="login-form__form-group">
      <%= f.label :password, class: "login-form__label" %>
      <%= f.password_field :password, placeholder: "Password", class: "login-form__input", minlength: 6, pattern: ".{6,}", required: true %>
    </div>
    <div class="login-form__form-group">
      <%= f.label :password_confirmation, class: "login-form__label" %>
      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "login-form__input", required: true %>
    </div>
    <button class="login-form__button--sign-up button" type="submit">Create Account</button>
    <%= render "devise/shared/links" %>
  <% end %>

  <%= render "shared/footer" %>
</div>

