<div class="login-form__links">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "login-form__links--forgot-password" %>
  <% end %>

  <%- if controller_name != 'sessions' %>
    <%= link_to "Already have an account?", new_session_path(resource_name), class: "login-form__links--login" %>
  <% end %>

  <div class="login-form__omniauth"><span>or</span></div>
  
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Create new account", new_registration_path(resource_name), class: "login-form__button--sign-up button" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%= button_to user_facebook_omniauth_authorize_path, :data => {turbo: "false"}, class: "login-form__button--facebook-login button" do %>
      <i class="bi bi-facebook"></i>
      <%= omniauth_message %>
    <% end %>
  <% end %>
</div>