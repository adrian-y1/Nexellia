<div class="login-form__links">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "login-form__links--forgot-password" %>
  <% end %>

  <hr>

  <%- if controller_name != 'sessions' %>
    <%= link_to "Already have an account?", new_session_path(resource_name), class: "login-form__links--login" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Create new account", new_registration_path(resource_name), class: "login-form__button--sign-up button" %>
  <% end %>


  <%- if devise_mapping.omniauthable? %>
    <%= button_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, :data => {turbo: "false"}, class: "login-form__button--login button" %>
  <% end %>
</div>