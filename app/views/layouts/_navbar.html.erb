<nav class="navbar navbar-expand-lg bg-body-tertiary navbar bg-dark px-5" data-bs-theme="dark">
  <div class="container-fluid">
    <%= link_to "Odin-Facebook", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to "Feed", posts_path, class: "nav-link active" if user_signed_in? %>
        </li>
        <li class="nav-item">
          <%= link_to "Users", users_path, class: "nav-link" if user_signed_in? %>
        </li>
      </ul>
      <div class="d-flex gap-4">
        <% if user_signed_in? %>
          <div class="text-white">
            <div class="card-body">
              <div class="row align-items-center">
                <div class="col-auto">
                  <%# User's navbar profile picture %>
                  <%= render "profiles/navbar_picture" %>
                </div>
                <div class="col">
                  <h5 class="card-title"><%= link_to current_user.full_name, current_user %></h5>
                </div>
              </div>
            </div>
          </div>

          <%# Notifications Dropdown menu %>
          <%= render "layouts/notifications_dropdown_menu", all_notifications: all_notifications, unread_notifications: unread_notifications, user: current_user %>
          <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-outline-primary" %>
        <% else %>
          <%= link_to "Sign in", new_user_session_path, class: "btn btn-primary" %>
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>