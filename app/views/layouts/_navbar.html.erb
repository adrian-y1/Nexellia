<div class="navbar-container">
  <nav class="navbar">
    <div class="navbar__brand">
      <%= link_to root_path, class: "navbar__title" do %>
        <%= image_tag("nexellia.png", class: "navbar__logo",  alt:"Nexellia Logo") %> 
      <% end %>
      <%= form_with url: search_index_path, html: { class: "friends__search" }, method: :get do |f| %>
        <button><i class="bi bi-search"></i></button>
        <%= f.text_field :q, placeholder: "Search", id: "search-users", autocomplete: "off" %>
      <% end %>
      <div class="search-results"></div>
    </div>

    <ul class="navbar__nav">
      <li class="navbar__item">
        <%= link_to posts_path, class: "navbar__link #{ is_current_path?(posts_path) ? set_active_link(posts_path) : set_active_link(root_path)}", title: "Home" do %>
          <i class="bi bi-house-door<%= is_current_path?(posts_path) ? set_fill_icon(posts_path) : set_fill_icon(root_path) %>"></i>
        <% end %>
        <%= is_current_path?(posts_path) ? set_active_border(posts_path) : set_active_border(root_path) %>
      </li>
      <li class="navbar__item">
        <%= link_to users_path, class: "navbar__link #{set_active_link(users_path)}", title: "Friends" do %>
          <i class="bi bi-people<%= set_fill_icon(users_path) %>"></i>
        <% end %>
        <%= set_active_border(users_path) %>
      </li>
    </ul>

    <div class="navbar__user-menus">
      <div class="navbar__notifications-dropdown" title="Notifications" data-controller="dropdown-toggle">
        <%= render "layouts/notifications_dropdown_menu", all_notifications: all_notifications, unread_notifications: unread_notifications, user: current_user %>
      </div>
      <div class="navbar__user-dropdown" title="Account" data-controller="dropdown-toggle">
        <%= render "layouts/user_dropdown_menu" %>
      </div>
    </div>
  </nav>
</div>