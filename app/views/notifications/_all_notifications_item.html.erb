<% noticed_obj = notification.to_notification %>

<%= link_to noticed_obj.url, data: { turbo_frame: "_top" } do %>
  <div class="alert alert-primary alert-dismissible fade show" role="alert">
    <div class="row align-items-center">
      <div class="col-auto">
        <%= render "profiles/picture", profile: noticed_obj.actor.profile, size: "50x50" %>
      </div>
      <div class="col">
        <strong><%= noticed_obj.message %></strong>
      </div>
      <div class="col-auto">
        <% if notification.unread? %>
          <span class="badge bg-primary">New</span>
        <% end %>
        <div class="text-muted small"><%= time_ago_in_words(notification.created_at) %> ago</div>
      </div>
    </div>
  </div>
<% end %>
