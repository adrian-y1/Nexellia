<%= link_to post, data: { turbo_frame: "_top" }, class: "text-decoration-none" do %>
  <li class="list-group-item border-0 py-3">
    <div class="row align-items-center">
      <div class="col-auto">
        <%= render "profiles/picture", profile: profile, size: "50x50" %>
      </div>
      <div class="col">
        <div class="fw-bold"><%= user.username %></div>
        <div class="text-muted small">commented on your post</div>
      </div>
      <div class="col-auto">
        <div class="text-muted small"><%= time_ago_in_words(created_at) %> ago</div>
      </div>
    </div>
  </li>
<% end %>