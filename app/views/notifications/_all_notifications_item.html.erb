<% noticed_obj = notification.to_notification %>

<%= link_to noticed_obj.post, data: { turbo_frame: "_top" }, class: "text-decoration-none" do %>
  <% if notification.unread? %>
    <li class="list-group-item border-0 py-3" style="background-color: lightblue;">
  <% else %>
    <li class="list-group-item border-0 py-3">
  <% end %>
    <div class="row align-items-center">
      <div class="col-auto">
        <%= render "profiles/picture", profile: noticed_obj.creator_profile, size: "50x50" %>
      </div>
      <div class="col">
        <div class="fw-bold"><%= noticed_obj.creator.username %></div>
        <div class="text-muted small">commented on your post</div>
      </div>
      <div class="col-auto">
        <div class="text-muted small"><%= time_ago_in_words(notification.created_at) %> ago</div>
      </div>
    </div>
  </li>
<% end %>