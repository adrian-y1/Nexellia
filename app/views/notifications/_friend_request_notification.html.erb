<% if context == :all %>
  <div class="col-auto">
    <%= render "profiles/picture", profile: noticed_obj.sender_profile, size: "50x50" %>
  </div>
  <div class="col">
    <div class="fw-bold"><%= noticed_obj.sender.username %></div>
    <div class="text-muted small">sent you a friend request</div>
  </div>
<% elsif context == :unread %>
  <strong><%= link_to noticed_obj.sender.username, noticed_obj.sender, data: { turbo_frame: "_top" } %></strong> 
  sent you a friend request
<% end %>