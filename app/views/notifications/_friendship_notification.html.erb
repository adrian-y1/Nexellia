<% if context == :all %>
  <div class="col-auto">
    <%= render "profiles/picture", profile: noticed_obj.friend_profile, size: "50x50" %>
  </div>
  <div class="col">
    <div class="text-muted small">You and <div class="fw-bold"><%= noticed_obj.friend.username %></div> are now friends </div>
  </div>
<% elsif context == :unread %>
  You and <strong><%= link_to noticed_obj.friend.username, noticed_obj.friend, data: { turbo_frame: "_top" } %></strong>
  are now friends
<% end %>