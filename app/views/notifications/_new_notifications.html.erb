<% if current_user %>
  <%= turbo_stream_from "new_notifications_#{user.id}" %>
  
  <%= turbo_frame_tag "new_notifications_#{user.id}" do %>
    <% @unread_notifications.not_closed.each do |notification| %>
      <%= render "notifications/new_notification", notification: notification %>
    <% end %>
  <% end %>
<% end %>