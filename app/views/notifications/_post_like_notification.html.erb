<% if context == :all %>
  <div class="col-auto">
    <%= render "profiles/picture", profile: noticed_obj.liker_profile, size: "50x50" %>
  </div>
  <div class="col">
    <div class="fw-bold"><%= noticed_obj.liker.username %></div>
    <div class="text-muted small">liked your post</div>
  </div>
<% elsif context == :unread %>
  <strong><%= link_to noticed_obj.liker.username, noticed_obj.liker, data: { turbo_frame: "_top" } %></strong> 
  liked your <%= link_to "post", noticed_obj.liked_post, data: { turbo_frame: "_top" } %>
<% end %>