<% noticed_obj = notification.to_notification %>

<div class="alert alert-primary alert-dismissible fade show" role="alert">
    <% if notification.unread? %>
      <span>(Unread)</span>
    <% end %>

  <strong><%= link_to noticed_obj.creator.username, noticed_obj.creator, data: { turbo_frame: "_top" } %></strong> 
  commented on your <%= link_to "post", noticed_obj.post, data: { turbo_frame: "_top" } %>.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

