<% if current_user %>
  <div class="container">
    <%= turbo_stream_from "unread_notifications_#{user.id}" %>
    
    <%= turbo_frame_tag "unread_notifications_#{user.id}" do %>
      <% @unread_notifications.each do |notification| %>
        <%= render "notifications/unread_notification", notification: notification %>
      <% end %>
    <% end %>
  </div>
<% end %>