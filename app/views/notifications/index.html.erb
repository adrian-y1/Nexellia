<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2 class="my-4">Notifications</h2>
      <%= turbo_frame_tag "new_notifications_#{current_user.id}" do %>
        <%= render "notifications/empty_state" %>
        <% @notifications.each do |notification| %>
          <%= render "notifications/new_notification", notification: notification %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
