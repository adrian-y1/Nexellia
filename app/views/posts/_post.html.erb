<%# turbo_stream_from post.user.id, "posts" %>

<%= turbo_frame_tag post do %>
  <div class="card mt-4" style="width: 600px;">
    <div class="card-header">
      Author: <%= user.username %> <br>
      Current: <%= post.user.username %> <br>
      <%= post.user.username %>
      <%= link_to "View Post", post, data: { turbo_frame: "_top" }  %>
      <div class="post-buttons" data-user-id="<%= post.user.id %>">
        <% if user == post.user %>
          <%= link_to "Delete", post_path(post), data: { turbo_method: :delete } %>
          <%= link_to "Edit", edit_post_path(post) %>
        <% end %>
      </div>
    </div>
    <div class="card-body">
      <p class="card-text"><%= post.body %></p>
      <p class="card-text"><small class="text-muted">Created at: <%= time_ago_in_words(post.created_at) %> ago</small></p>

      <%# PostLikes Count & button partial %>
      <%= turbo_stream_from post, :likes %>
      <%= render 'post_likes/post_like', post: post %>
      <%= render 'post_likes/button', post: post, like_status: user.liked?(post) %>
      <hr>

      <%# Comments Partials & Comment Form %>
      <div class="card-header">Comments (<%= post.comments_count %>)</div>
      <%= turbo_stream_from post, :comments %>
      
      <ul class="list-group">
        <%= turbo_frame_tag post, "comments" do %>
          <%= render post.comments, user: user %>
        <% end %>
      </ul>
      <%= turbo_frame_tag id="new_comment", src: new_post_comment_path(post.id) %>

    </div>
  </div>
<% end %>