<%= turbo_frame_tag "post-interactions-#{post.id}" do %>
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-md-10">
        <div class="card mb-3">
          <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="card-title">
                  <span class="post-profile-picture">
                    <%= render "profiles/picture", profile: post.user.profile, size: "50x50" %>
                  </span>
                  <%= link_to post.user.full_name, post.user, data: { turbo_frame: "_top" } %>
                </h5>
                <p class="card-text">
                  <small class="text-muted"><%= time_ago_in_words(post.created_at) %> ago</small>
                </p>
              </div>
              <div class="btn-group">
                <div class="post-buttons" data-user-id="<%= post.user.id %>">
                  <% if user == post.user %>
                    <%= link_to "Edit", edit_post_path(post), data: { turbo_frame: 'modal' }, class: "btn btn-sm btn-outline-secondary" %>
                    <%= link_to "Delete", post_path(post), data: { turbo_method: :delete }, class: "btn btn-sm btn-outline-danger" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          
          <div class="card-body">
            <%# Post body partial %>
            <%= render "posts/post_body", post: post %>
            <div>
              <%# likes and coments count partials and streams %>
              <%= turbo_stream_from post, :likes %>

              <small class="text-muted d-flex justify-content-between align-items-center">
                <%= render 'likes/post_likes_count', post: post, page: :index %>
                <%= render 'comments/comment_count', post: post, page: :index %>
              </small>
              <div class="d-flex justify-content-between align-items-center">
                <%= render 'likes/post_like_button', post: post, page: :index, like_status: user.liked?(post) %>
                <%= link_to "Comment", post_path(post), data: { turbo_frame: 'post_show_modal' }, class: "btn btn-secondary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>