<div class="container d-flex flex-column align-items-center mb-5">
  <h2>User Posts</h2>
  <% @posts.each do |post| %>
    <div class="card mt-4" style="max-width: 600px;">
      <div class="card-header">
        <%= post.user.username %>
      </div>
      <div class="card-body">
        <p class="card-text"><%= post.body %></p>
        <p class="card-text"><small class="text-muted">Created at: <%= time_ago_in_words(post.created_at) %> ago</small></p>
        <div class="card-header">Comments (<%= post.comments_count %>)</div>
        <ul class="list-group">
          <% post.comments.each do |comment| %>
            <li class="list-group-item">
              <span class="badge text-bg-primary"><%= comment.user.username %></span> <br>
              <div class="d-flex justify-content-between">
                <%= comment.body %>
                <small><%= time_ago_in_words(comment.created_at) %> ago</small>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>