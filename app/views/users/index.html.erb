<h2 class="text-center mb-5 mt-2">All Users</h2>
<div class="list-group w-100 align-items-center d-flex justify-content-center flex-column">

  <% @users.each do |user| %>

    <%# Creates a 1-on-1 stream for the Friend Request Sender and Receiver %>
    <%= turbo_stream_from [current_user.id, user.id] %>

    <div class="list-group-item w-75 d-flex justify-content-between align-items-center">
      <div>
        <%= render "profiles/picture", profile: user.profile, size: "50x50" %>
        <%= link_to user.username, user_path(user) %>
      </div>
      <%= render "users/friend_request_form", logged_in_user: Current.user, user: user, friend_request: @friend_request %>
    </div>
  <% end %>
  
</div>